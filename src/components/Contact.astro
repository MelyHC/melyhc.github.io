---
import contactList from "../data/contact";
---

<section id="contact" class="bg-color text-center text-white pt-5">
  <h2 class="mt-1 text-domine">Cont√°ctame</h2>
  <hr class="mt-0 mb-0 title-line" />
  <div id="contact-container">
    <div class="container mt-2 d-flex flex-column align-items-center">
      <div class="pb-5">
        {
          contactList.map(({ classDes, description, href, icon, target }) => (
            <div class="p-2">
              <a class="media d-flex align-items-center" href={href} {target}>
                <i class={`${icon} me-2 ms-3 icon-md`} />
                <span class={classDes}>{description}</span>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
