---
import skillsList from "../data/skills";
import icons from "../data/icons";

import addedIcons from "../utils/addedIcons";

const mapedSkills = addedIcons(icons, skillsList, "skills");
---

<section id="skills" class="text-center pt-5 mb-5">
  <h2 class="mt-4 text-domine">Habilidades</h2>
  <hr class="mt-0 mb-0 title-line" />
  <div class="mt-4">
    <div class="container" id="skill-container">
      {
        mapedSkills.length && icons.length ? (
          mapedSkills.map(({ type, skills }) => (
            <div class="my-5">
              <h3 class="text-domine">{type}</h3>
              <div class="row justify-content-center align-items-center">
                {skills.map(({ className, label }) => (
                  <div class="col col-md-3 p-0">
                    <div class="px-2 m-4 m-md-3 pad-border d-flex flex-column justify-content-center align-items-center">
                      <i class={`${className} icon-lg`} />
                      <span class="font-weight-bold">{label}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))
        ) : (
          <div>
            <p>Cargando ...</p>
          </div>
        )
      }
    </div>
  </div>
</section>
