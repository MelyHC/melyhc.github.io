---
import Layout from "../layouts/Layout.astro";

import Navbar from "../components/Navbar.astro";
import Home from "../components/Home.astro";
import AboutMe from "../components/AboutMe.astro";
import Proyects from "../components/Proyects.astro";
import Skills from "../components/Skills.astro";
import Contact from "../components/Contact.astro";

import proyectsList from "../data/proyects";
import skillsList from "../data/skills";
import contactList from "../data/contact";
---

<Layout title="Mely Hidalgo Crespo">
	<main>
		<Navbar />
		<div class="" data-bs-spy="scroll" data-bs-target=".navbar">
			<Home />
			<AboutMe />
			<Proyects proyectsList={proyectsList} />
			<Skills skillsList={skillsList} />
			<Contact contactList={contactList} />
		</div>

		<style is:global>
			@import url("https://fonts.googleapis.com/css?family=Domine|Open+Sans:400,400i,600,600i,700");

			* {
				font-family: "Open sans", serif;
			}
			.text-domine {
				font-family: "domine", serif;
			}

			.title-line {
				width: 50px;
				border-top: 4px solid var(--purple);
				margin: 0 auto;
				opacity: 1;
			}

			.bg-color {
				background-color: rgb(29, 29, 29);
			}

			.icon-lg {
				font-size: 3.5em;
			}

			.icon-md {
				font-size: 2rem;
			}

			.btn-purple {
				background-color: var(--purple);
				width: 115px;
			}

			.btn-purple:hover {
				opacity: 1;
				background-color: var(--purple);
			}

			i {
				color: var(--purple);
			}

			span {
				font-weight: bold;
				font-size: 1.2rem;
			}

			.mail {
				font-size: 0.8em;
			}

			a,
			a:hover {
				color: inherit;
				text-decoration: inherit;
			}

			@media screen and (min-width: 375px) {
				.mail {
					font-size: initial;
				}
			}

			@media screen and (min-width: 576px) {
				.nav-link.active::after {
					display: block;
					content: "";
					border-bottom: 2px solid var(--purple);
				}

				.text-about-me {
					font-size: 1.25em;
				}
			}

			@media screen and (min-width: 768px) {
				.title {
					font-size: 5em;
				}

				.decoration {
					background-image: url("../img/acuarela9.png");
					background-repeat: no-repeat;
					background-position: 50%;
					background-size: cover;
				}

				.home span {
					font-size: 1.8em;
				}

				.description {
					font-size: 1.25em;
					padding: 0 15%;
				}
			}

			@media screen and (min-width: 992px) {
				.text-about-me {
					font-size: 1.3rem;
				}
			}
		</style>

		<script is:inline type="module" src="">
			import bootstrap from "bootstrap";

			const scrollSpyEl = document.querySelector(".navbar");
			console.log(scrollSpyEl)
			const scrollSpy = bootstrap.ScrollSpy.getInstance(scrollSpyEl, {
				offset: 58,
				metod: "auto",
			});



			scrollSpy.addEventListener("activate.bs.scrollspy", (e) => {
				const container = document.querySelector("#navbar-hide");
			console.log(scrollSpy);
				if (
					(!container.is(e.target) && container.has(e.target).length === 0) ||
					container.has(e.target).length === 1
				)
					container.collapse("hide");
			});
		</script>
	</main></Layout
>
